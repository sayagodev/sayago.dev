{
  "name": "sayago.dev",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate-markdown": "tsx scripts/validate-markdown.ts",
    "prepare": "husky",
    "release": "commit-and-tag-version -a",
    "release:minor": "commit-and-tag-version --release-as minor -a",
    "release:major": "commit-and-tag-version --release-as major -a",
    "release:first": "commit-and-tag-version --first-release -a",
    "version:update": "node scripts/update-version.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss,md,mdx,html,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'pnpm tsc --noEmit'"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@react-email/render": "^2.0.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "lenis": "^1.3.17",
    "lucide-react": "^0.563.0",
    "motion": "^12.27.1",
    "next": "16.1.1",
    "next-intl": "^4.7.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-html": "^16.0.1",
    "resend": "^6.9.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@tailwindcss/postcss": "^4",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "commit-and-tag-version": "^12.6.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ]
  }
}
